@charset "utf-8";
/* CSS Document */
body{
	  margin-left: 0px;
	  margin-top: 0px;
	  margin-right: 0px;
	  margin-bottom: 0px;
	  margin:0 auto;
	  padding:0;
	 
	  overflow:hidden;
	  margin: auto 0;
  }
  #login_body{
	  position:relative;
	  height:inherit;
  }
  
  .div_main_body{
	  margin: 0 auto;
	  border:1px solid white;
	  background:url(../images/common/bg.jpg) no-repeat;
	  width:1440px;
	  height: 1200px;
  }
  #login_Logo{
	   margin-top:60px;
	   margin-left:104px;
  }
  
  .td_logo{
	  padding-right:25px;
  }
  
  .td_logo img{
	  width:68px;
	  height:68px;
  }
  
  .td_title{
	  padding-left:25px;  
  }
  
  .main{
	width:600px;
	height:310px;
	border:0px solid #000000;
	position:absolute;
	top:50%;
	left:50%;
	margin-top:-140px;
	margin-left:-300px;
  }
  .main .login_table{
	  background:url(../images/common/login_bg_3.png) no-repeat;
	  text-align:center;
	  height:310px;
   }
   .main .login_table .login_input{
	   background:url(../images/common/login_input.png) no-repeat;
	   border:none;
	   height:42px;
	   width:232px;
	   padding-left:10px;
	   margin-right:40px;
	   font-size:16px;
	   color:#808080;
	   font-weight:bold;
	   line-height: 42px;
   }
   .main .login_table .login_td{
	   padding-left:20px;
   }
   .main .login_table .login_top{
	  padding-top:10px;   
   }
   .main .login_table .login_btntd{
	  padding-right:50px; padding-bottom:15px;   
   }
   
   .main .login_table .login_btntd img{
	   cursor:pointer;
   }
  
  .footer{
	  background:url(../images/common/bottom_bg.png) no-repeat;
	  height:80px;
	  bottom:0px; 
	  bottom:0;
	  position:absolute;
	  z-index:999;
	  width:1440px;
  }
  
  .rdo{
     margin-bottom: -4px;
     margin-right: 5px;
     width:18px;
     height:18px;
  }
  .rdoText{
     color:white; 
     font-size:16px; 
     font-weight:bold; 
     margin-bottom:25px;
  }
  
  .footer #info{ padding:15px; text-align:center; color: #666666; font-size:12px;}
  .footer #info span{ word-spacing:5pt; color:#6B6B6B; font-size:13px; font-family:'黑体';}
  .footer #info .td_company{ padding-right:15px;}
  .footer a.info, a.info:visited{color: #6B6B6B; font-size:12px; text-decoration:none;}
  .footer a.info:hover{ text-decoration:underline;}

